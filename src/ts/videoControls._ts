const textBlock: Element = document.querySelector(".text-on-video-div");
const text = document.querySelector(".text-on-video-p");
const playButton = document.querySelector(".play-button");
const video = document.querySelector(".video");
// const elementsMap = [textBlock, text, playButton, video]

let play = false;

// elementsMap.every(element => element)

if (textBlock && text && playButton && video) {
    textBlock.addEventListener("click", () => {
        if (play) {
          play = false;
          video.pause();
          text.style.opacity = "0.99";
          playButton.style.opacity = "0.5";
        } else {
          play = true;
          video.play();
          text.style.opacity = "0";
          playButton.style.opacity = "0";
        }
      });
      console.log('All is ok')
} else {
    console.log('Can`t fined elements with classes (.text-on-video-div || .text-on-video-p || .play-button || .video)')    
}